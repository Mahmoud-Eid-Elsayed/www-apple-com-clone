.product-viewer-section {
    background-color: #000;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    position: relative;
}

.product-viewer-header {
    width: 100%;
    max-width: 1280px;
    padding: 2rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.product-viewer-title {
    font-size: 2.25rem;
    font-weight: bold;
    text-align: left;
}

@media (min-width: 768px) {
    .product-viewer-title {
        font-size: 3rem;
    }
}

.product-viewer-cta {
    margin-top: 0;
}

.product-viewer-ar-link {
    display: flex;
    align-items: center;
    color: #3b82f6;
    text-decoration: none;
}

.product-viewer-ar-link:hover {
    text-decoration: underline;
}

.product-viewer-ar-icon {
    margin-left: 0.5rem;
    width: 1.25rem;
    height: 1.25rem;
}

.product-viewer-content {
    width: 100%;
    max-width: 1280px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.product-viewer-label {
    text-align: center;
    margin-bottom: 0.5rem;
    font-size: 12px;
    font-weight: 600;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
}

@media (min-width: 768px) {
    .product-viewer-label {
        font-size: 12px;
    }
}

.product-viewer-colornav {
    width: 100%;
    max-width: 23rem;
    background-color: rgb(46, 46, 48);
    padding: 10px 0 0 0;
    border-radius: 50px;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.product-viewer-colornav.sticky-top {
    position: sticky;
    top: 0;
    z-index: 10;
}

.product-viewer-colornav.sticky-bottom {
    position: sticky;
    bottom: 0;
}

.colornav-items {
    display: flex;
    gap: 1rem;
    justify-content: center;
}

.colornav-item {
    display: flex;
    align-items: center;
}

.colornav-input {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
}

.colornav-label {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    border-radius: 9999px;
    cursor: pointer;
}

.colornav-label-active {
    outline: 2px solid #fff;
    outline-offset: 2px;
}

.colornav-label.all-colors {
    background: linear-gradient(to right, #3c3c3e, #d4d4d4, #e5e5e5, #d7c7a7);
}

.colornav-label.TiBlack {
    background-color: #3c3c3e;
}

.colornav-label.TiWhite {
    background-color: #d4d4d4;
}

.colornav-label.TiGray {
    background-color: #e5e5e5;
}

.colornav-label.TiRose {
    background-color: #d7c7a7;
}

.colornav-swatch-text {
    font-size: 0.75rem;
    color: #fff;
}

.product-viewer-image-container {
    margin-top: 2rem;
    width: 100%;
    max-width: 896px;
}

.product-viewer-image {
    width: 100%;
    height: auto;
    object-fit: contain;
}

.product-viewer-placeholder-text {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.875rem;
}